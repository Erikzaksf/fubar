<h3>Products</h3>
<%= render "layouts/errors", :object => @order_item %>

<div class="row">
  <div class="section">
  <% @products.each do |product| %>
    <div class="col s4">
      <h4><%=link_to product.name, product_path(product) %></h4>
      <p><%= product.description %></p>
      <p><%= number_to_currency product.price %></p>
      <%= form_for @order_item do |f| %>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.number_field :quantity, placeholder: "Please enter a quantity" %>
        <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %></span>
        <%= render "layouts/errors", :object => @order_item %>

      <% end %>
    </div>
  <% end %>

</div>
</div>
